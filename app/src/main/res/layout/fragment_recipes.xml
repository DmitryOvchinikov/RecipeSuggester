<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.RecipesFragment">

    <ImageView
        android:id="@+id/recipes_IMG_recipe"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/recipes_TXT_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipes_IMG_recipe"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:maxLines="1"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/recipes_TXT_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipes_TXT_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/recipes_TXT_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="?actionBarSize"

        android:text="@string/search_recipe"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/recipes_BTN_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="150dp"
        android:text="@string/recipes_back" />

    <Button
        android:id="@+id/recipes_BTN_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="150dp"
        android:text="@string/recipes_next" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/recipes_ANIM_animation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:lottie_rawRes="@raw/loading_animation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />


</RelativeLayout>